               </GridPane.margin></TextArea>
                <GridPane fx:id="userButtons" visible="false" GridPane.rowIndex="5">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
